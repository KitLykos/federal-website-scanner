# Federal Website Scanner Environment Configuration
# Copy this file to .env and customize as needed

# Scanner Identity (customize for your organization)
SCANNER_NAME="FederalWebsiteScanner"
SCANNER_EMAIL="scanner@example.com"
SCANNER_WEBSITE="https://github.com/your-org/federal-website-scanner"

# Scanning Limits
MAX_URLS_TOTAL=800
MAX_URLS_PER_DOMAIN=100
CHUNK_SIZE=50
MAX_STATIC_URLS=150
MAX_API_URLS=50

# Timeouts (milliseconds)
PAGE_TIMEOUT_MS=180000
URL_VALIDATION_TIMEOUT_MS=25000
BATCH_TIMEOUT_MS=90000
SITEMAP_TIMEOUT_MS=15000

# Processing Settings
SPLIT_LARGE_DOMAINS=true
SCAN_CONCURRENCY=1
VALIDATION_BATCH_SIZE=3
DEBUG=false

# Performance Tuning
NODE_OPTIONS="--max-old-space-size=2048"
PUPPETEER_CACHE_DIR="$HOME/.cache/puppeteer"
UNLIGHTHOUSE_WORKERS=1

# Google Sheets Integration (optional)
# GOOGLE_CREDENTIALS_PATH="/path/to/service-account.json"
# GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account.json"

# CI/CD Settings  
# AGENCY_NAME="education"  # Filter to specific agency
